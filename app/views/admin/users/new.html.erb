<% content_for :breadcrumbs do -%>
  <%= link_to 'Dashboard', dashboard_url %> &raquo;
  <%= link_to 'Users', users_url %> &raquo;
  <span>New User</span>
<% end -%>

<% content_for :main do -%>

  <% form_for @user, { :url => users_url } do |f| -%>
	
    <div class="form">
    	
      <h2>User Details</h2>

			<dl>
				
        <%= render 'form', :f => f %>
    
			</dl>

      <div class="buttons">
      
        <%= link_to 'Cancel', users_url, :class => 'cancel' %>
        <%= f.submit 'Create User', :class => 'button' %>
      
      </div>    
    
    </div>

  <% end -%>

<% end -%>